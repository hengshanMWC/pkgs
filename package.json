{
  "name": "@abmao/pkgs",
  "version": "2.2.1-beta.10",
  "packageManager": "pnpm@7.21.0",
  "description": "Simple monorepo combined with pnpm",
  "author": "mawencan",
  "license": "MIT",
  "homepage": "https://github.com/hengshanMWC/pkgs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hengshanMWC/pkgs.git"
  },
  "bugs": {
    "url": "https://github.com/hengshanMWC/pkgs/issues"
  },
  "keywords": [
    "monorepo",
    "packages",
    "yarn",
    "npm",
    "ni",
    "pnpm",
    "pnpm-workspace",
    "publish",
    "version"
  ],
  "access": "public",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "pkgs": "dist/cli/bin.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:unbuild": "unbuild",
    "build": "esno ./scripts/build.ts",
    "release": "esno ./scripts/release.ts",
    "prepare": "husky install",
    "lint": "eslint --ext=js,ts,json,md .",
    "lint:fix": "eslint --fix --ext=js,ts,json,md .",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "test:bin": "esno ./src/cli/bin.ts run test:bin-i --type all --color=false",
    "test:bin-i": "npm i",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "dependencies": {
    "@abmao/bump": "^0.0.1",
    "@abmao/forb": "^2.0.5",
    "@antfu/ni": "^0.21.8",
    "colors": "^1.4.0",
    "commander": "^10.0.1",
    "import-local": "^3.1.0",
    "js-yaml": "^4.1.0",
    "load-code": "2.0.0",
    "npmlog": "^7.0.1",
    "plugin-group": "^1.0.5",
    "semver": "^7.5.2",
    "simple-git": "^3.19.1"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.43.1",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@ts-type/package-dts": "^2.0.8",
    "@types/fs-extra": "^11.0.1",
    "@types/import-local": "^3.1.0",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.195",
    "@types/npmlog": "^4.1.4",
    "@types/semver": "^7.5.0",
    "@vitest/coverage-v8": "^0.32.0",
    "c8": "^7.11.0",
    "eslint": "^8.51.0",
    "esno": "^0.14.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^13.2.2",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.1",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitepress": "1.0.0-beta.5",
    "vitest": "^0.32.0"
  },
  "lint-staged": {
    "{server,client}/*.{js,ts,json,md,tsx}": "pnpm lint"
  }
}
