{
  "name": "@abmao/pkgs",
  "version": "1.0.0-beta.4",
  "description": "Simple monorepo combined with pnpm",
  "keywords": [
    "monorepo",
    "packages",
    "pnpm",
    "pnpm-workspace",
    "publish",
    "version"
  ],
  "license": "MIT",
  "author": "mawencan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hengshanMWC/pkgs.git"
  },
  "main": "dist/pkgs.cjs.min.js",
  "module": "dist/pkgs.esm.min.js",
  "types": "types",
  "files": [
    "bin",
    "dist",
    "types"
  ],
  "bin": {
    "pkgs": "bin/cli.js"
  },
  "scripts": {
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "prepare": "husky install",
    "lint": "eslint --ext=js,ts,json,md .",
    "lint:fix": "eslint --fix --ext=js,ts,json,md .",
    "build": "esno ./scripts/build.ts && tsc --emitDeclarationOnly",
    "build:npm": "cross-env NODE_ENV=npm npm run build",
    "release": "esno ./scripts/release.ts",
    "bin": "node bin/cli.js"
  },
  "bugs": {
    "url": "https://github.com/hengshanMWC/pkgs/issues"
  },
  "homepage": "https://github.com/hengshanMWC/pkgs#readme",
  "dependencies": {
    "@abmao/bump": "^0.0.1",
    "@abmao/forb": "^1.0.6",
    "colors": "^1.4.0",
    "commander": "^10.0.1",
    "fs-extra": "^10.0.1",
    "import-local": "^3.1.0",
    "js-yaml": "^4.1.0",
    "npmlog": "^7.0.1",
    "plugin-group": "^1.0.4",
    "simple-git": "^3.4.0"
  },
  "devDependencies": {
    "@abmao/eslint-config-ts": "^0.1.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@ts-type/package-dts": "^1.0.60",
    "@types/fs-extra": "^9.0.13",
    "@types/js-yaml": "^4.0.5",
    "@types/rimraf": "^3.0.2",
    "@types/validate-npm-package-name": "^3.0.3",
    "c8": "^7.11.0",
    "camelcase": "^6.3.0",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.11.0",
    "esno": "^0.14.1",
    "husky": "^7.0.4",
    "log-symbols": "^5.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-esbuild": "^4.8.2",
    "strip-ansi": "^7.0.1",
    "typescript": "^4.6.2",
    "validate-npm-package-name": "^3.0.0",
    "vite": "^2.8.6",
    "vitest": "^0.8.0"
  }
}
