{
  "name": "@abmao/pkgs",
  "version": "1.0.4-beta.2",
  "packageManager": "pnpm@7.21.0",
  "description": "Simple monorepo combined with pnpm",
  "keywords": [
    "monorepo",
    "packages",
    "pnpm",
    "pnpm-workspace",
    "publish",
    "version"
  ],
  "license": "MIT",
  "author": "mawencan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hengshanMWC/pkgs.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist"
  ],
  "bin": {
    "pkgs": "bin/cli.js"
  },
  "scripts": {
    "build:npm": "tsup src/index.ts --format esm,cjs --dts-resolve --target node12.20.0",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "prepare": "husky install",
    "lint": "eslint --ext=js,ts,json,md .",
    "lint:fix": "eslint --fix --ext=js,ts,json,md .",
    "build": "esno ./scripts/build.ts && tsc --emitDeclarationOnly",
    "build:npm2": "cross-env NODE_ENV=npm npm run build",
    "release": "esno ./scripts/release.ts",
    "bin": "node bin/cli.js"
  },
  "bugs": {
    "url": "https://github.com/hengshanMWC/pkgs/issues"
  },
  "homepage": "https://github.com/hengshanMWC/pkgs#readme",
  "peerDependencies": {
    "esbuild": "*"
  },
  "dependencies": {
    "@abmao/bump": "^0.0.1",
    "@abmao/forb": "^2.0.2",
    "bundle-require": "^4.0.1",
    "colors": "^1.4.0",
    "commander": "^10.0.1",
    "fs-extra": "^10.0.1",
    "joycon": "^3.1.1",
    "js-yaml": "^4.1.0",
    "plugin-group": "^1.0.4",
    "simple-git": "^3.4.0",
    "strip-json-comments": "^5.0.0"
  },
  "devDependencies": {
    "@abmao/eslint-config-ts": "^0.1.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^25.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@ts-type/package-dts": "^1.0.60",
    "@types/fs-extra": "^9.0.13",
    "@types/js-yaml": "^4.0.5",
    "@types/rimraf": "^3.0.2",
    "@types/validate-npm-package-name": "^3.0.3",
    "@vitest/coverage-v8": "^0.32.0",
    "c8": "^7.11.0",
    "camelcase": "^6.3.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.3",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.11.0",
    "esno": "^0.14.1",
    "husky": "^7.0.4",
    "lint-staged": "^13.2.2",
    "log-symbols": "^5.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-esbuild": "^4.8.2",
    "strip-ansi": "^7.0.1",
    "tsup": "^7.0.0",
    "typescript": "^4.6.2",
    "validate-npm-package-name": "^3.0.0",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.0"
  },
  "lint-staged": {
    "{server,client}/*.{js,ts,json,md,tsx}": "pnpm lint"
  }
}
